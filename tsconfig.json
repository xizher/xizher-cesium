{  
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ES2015",
    "target": "ESNext",
    "sourceMap": false,
    "rootDir":"./src",
    "outDir":"./dist",
    "watch":true,
    "esModuleInterop":true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
  ],
  "exclude": [
    "vue.d.ts"
  ]
}